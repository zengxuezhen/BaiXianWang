<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 对mybatis整体的配置 -->
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>
	</settings>
	<!-- 给实体类起别名 -->
	<typeAliases>
		<typeAlias type="com.zl.pojo.User" alias="user"/>
		<typeAlias type="com.zl.pojo.BankAccount" alias="bankAccount"/>
		<typeAlias type="com.zl.pojo.SelfEmployedIdentify" alias="self"/>
		<typeAlias type="com.zl.pojo.CompanyInfo" alias="company"/>
		<typeAlias type="com.zl.pojo.AuthorizedOperator" alias="author"/>
		<typeAlias type="com.zl.pojo.Province" alias="province"/>
		<typeAlias type="com.zl.pojo.City" alias="city"/>
		<typeAlias type="com.zl.pojo.District" alias="district"/>
		<typeAlias type="com.zl.pojo.Resource" alias="resource"/>
		<typeAlias type="com.zl.pojo.ResourceItem" alias="ri"/>
		<typeAlias type="com.zl.pojo.ClassThree" alias="classThree"/>
		<typeAlias type="com.zl.pojo.ResourceList" alias="resourceList"/>
		<typeAlias type="com.zl.pojo.FenYe" alias="fy"/>
	</typeAliases>
	<!-- 引用mapper映射文件 -->
	<mappers>
		<mapper resource="com/zl/dao/UserDaoMapper.xml"/>
		<mapper resource="com/zl/dao/UpgradeSelfPurchaseDaoMapper.xml"/>
		<mapper resource="com/zl/dao/UpgradeCompanyPurchaseDaoMapper.xml"/>
		<mapper resource="com/zl/dao/PurchaseOrderDaoMapper.xml"/>
		<mapper resource="com/zl/dao/AddressDaoMapper.xml"/>
		<mapper resource="com/zl/dao/ResourceDaoMapper.xml"/>
		<mapper resource="com/zl/dao/ResourceItemDaoMapper.xml"/>
		<mapper resource="com/zl/dao/ClassThreeDaoMapper.xml"/>
		<mapper resource="com/zl/dao/ResourceDaoListMapper.xml"/>
	</mappers>
</configuration>